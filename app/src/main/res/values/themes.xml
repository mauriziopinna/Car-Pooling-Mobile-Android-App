<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GoingMAD" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lightblue_500</item>
        <item name="colorPrimaryVariant">@color/lightblue_500_dark_variant</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/amber_500</item>
        <item name="colorSecondaryVariant">@color/amber_500_light_variant</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name= "colorOnBackground">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.GoingMAD.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.GoingMAD.NavHeader">
        <item name="colorPrimary">@color/amber_500</item>
    </style>


    <style name="Theme.GoingMAD.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.GoingMAD.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>